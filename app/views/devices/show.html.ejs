<div class="hero-unit">
  <h2 class="name"><%= device.name %></h2>
  <%- linkTo('Edit this device', editDevicePath(params.id), {class: 'btn pull-right'}); %>
  <%- linkTo('Back to list', devicePath(''), {class: 'btn pull-right'}); %>
</div>

<h2>Device Properties</h2>
<% for(var i in device) { -%>
<% if(i !== 'saved') { -%>
<div class="row list-item">
  <div class="span4">
    <h3><%= i %></h3>
  </div>
  <div class="span8">
    <h3><i class="icon-list-alt"></i><span class="<%= i %>"><%= device[i] %></span></h3>
  </div>
</div>
<% } -%><% } -%>