<div class="container">
  <div class="row">
    <div class="span8">
      <div class="filter-container">
        Platforms
        <ul class="nav nav-pills">
          <li class="active"><a href="#">All</a></li>
          <% if (devicePlatforms) { %>
            <% devicePlatforms.forEach( function(platform){ %>
              <li><a href="#"><%- platform %></a></li>
            <% }); %>
          <% } %>
        </ul>
        Offices
        <ul class="nav nav-pills">
          <li class="active"><a href="#">All</a></li>
          <% if (deviceOffices) { %>
            <% deviceOffices.forEach( function(office){ %>
              <li><a href="#"><%- office %></a></li>
            <% }); %>
          <% } %>
        </ul>
        Availability
        <ul class="nav nav-pills">
          <li class="active"><a href="#">All</a></li>
          <li><a href="#">Checked In</a></li>
          <li><a href="#">Checked Out</a></li>
        </ul>
      </div>
      <div id="map-container">
        <img id="hudl-east-1" class="east-1-map" src="../img/hudl-zones/hudl-east-1.png"></img>
        <img id="hudl-east-1-east" class="east-1-map zone-map zone-east inactive" src="../img/hudl-zones/hudl-east-1-east.png"></img>
        <img id="hudl-east-1-west" class="east-1-map zone-map zone-west inactive" src="../img/hudl-zones/hudl-east-1-west.png"></img>
        <img id="hudl-east-1-cart" class="east-1-map zone-map zone-cart inactive" src="../img/hudl-zones/hudl-east-1-cart.png"></img>
      </div>
    </div>
    <div class="span4">
      <div id="devices-list">
      <% if (devicesByZone) { %>
        <% Array.prototype.forEach.call(Object.keys(devicesByZone), function(zone){ %>
          <div class="zone-container" onmouseover="zoneHover('<%- zone %>')" onmouseout="zoneHover('')">
            <h3><%- zone %></h3>
            <% if (devicesByZone[zone]) {%>
              <% Array.prototype.forEach.call(devicesByZone[zone], function(device){ %>
                <% if (device.checkedOut) {%>
                  <a href="#" style="color:gray;" data-toggle="modal" data-target="#checkoutModal"><%- device.name %></a>
                <% } else {%>
                  <a href="#" data-toggle="modal" data-target="#checkoutModal"><%- device.name %></a>
                <% } %>
                <div id="checkoutModal" class="modal fade" role="dialog">
                  <div class="modal-dialog">
                    <div class="modal-content">
                      <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4><span class="glyphicon glyphicon-lock"></span><%- device.name %></h4>
                      </div>
                      <div class="modal-body">
                          <% if (device.checkedOut) {%>
                            <form id="device-form" class="form-horizontal" action="/devices/<%= device.udid %>/checkin?_method=POST" method="POST">
                              <%- contentTag('input', 'Check-in device', {type: 'submit', class: 'btn btn-default btn-success btn-block'}) %>
                            </form>
                          <% } else {%>
                            <form id="device-form" class="form-horizontal" action="/devices/<%= device.udid %>/checkout?_method=POST" method="POST">
                              <%- contentTag('input', 'Check-out device', {type: 'submit', class: 'btn btn-default btn-success btn-block'}) %>
                            </form>
                          <% } %>
                      </div>
                      <div class="modal-footer">
                        <% if (device.checkedOut) {%>
                          <button type="submit" class="btn btn-default btn-default pull-right" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span>Continue to hog this device</button>
                        <% } else {%>
                          <button type="submit" class="btn btn-default btn-default pull-right" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span>Chicken out</button>
                        <% } %>
                      </div>
                    </div>
                  </div>
                </div>
              <% }); %>
            <% } %>
          </div>
        <% }); %>
      <% } %>
      </div>
    </div>
  </div>
</div>
